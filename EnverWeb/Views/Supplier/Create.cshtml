@model Enversoft.Models.Supplier

<h1 class="mb-4">Create Supplier</h1>

<form asp-action="Create">
    <div class="mb-3">
        <label for="code" class="form-label">Code</label>
        <input type="text" id="code" name="code" class="form-control" placeholder="Enter supplier code" required>
    </div>
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" id="name" name="name" class="form-control" placeholder="Enter supplier name" required>
    </div>
    <div class="mb-3">
        <label for="telephoneNo" class="form-label">Telephone Number</label>
        <input type="tel" id="telephoneNo" name="telephoneNo" class="form-control" placeholder="Enter supplier telephone number" required>
    </div>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</form>



